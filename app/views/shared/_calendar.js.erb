$.ajaxSetup({
  headers: { 'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content') },
  beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))}
});

$('#calendar').fullCalendar({
  lang: 'ja',
  editable: true,
  eventStartEditable: false,
  eventColor: '#45056e',
  events: [
    <% requests.each do |request| %>
    {
      id: <%= request.id %>,
      <% if is_admin %>
      title: '<%= request.user.student_id %>',
      <% else %>
      title: '<%= "#{request.room.label}(#{request.admin.name})" %>',
      <% end %>
      start: '<%= request.date.strftime('%Y-%m-%d') %>',
      allDay: true,
      className: '<%= request.active? ? :not_exported : :exported %>'
    },
    <% end %>
  ],
  <% unless is_admin %>
  dayClick: function(date, jsEvent, view) {
    const room_str = $('[name=\\[room\\]] option:selected').html();
    const admin_str = $('[name=\\[admin\\]] option:selected').html();
    const room_id = $('#_room').val();
    const admin_id = $('#_admin').val();
    const title = room_str + "(" + admin_str + ")";
    $.post('/requests',
        {
          'admin_id': admin_id,
          'room_id': room_id,
          'date_str': date.format('YYYY-MM-DD')
        },
        function(response) {
          if (response.error) {
            return;
          }
          $('#calendar').fullCalendar('removeEvents', response.id);
          $('#calendar').fullCalendar('renderEvent',
              {
                id: response.id,
                title: title,
                start: date.format('YYYY-MM-DD'),
                allDay: true
              })
        }
    );
  },
  eventClick: function(calEvent, jsEvent, view) {
    $.ajax({
      url: '/requests/' + calEvent.id,
      method: 'DELETE',
      success: function(response) {
        $('#calendar').fullCalendar('removeEvents', calEvent.id);
      }
    });
  }
  <% end %>
});

<% unless is_admin %>
$('#all-on').click(function() {
  const room_str = $('[name=\\[room\\]] option:selected').html();
  const admin_str = $('[name=\\[admin\\]] option:selected').html();
  const room_id = $('#_room').val();
  const admin_id = $('#_admin').val();
  const m = $('#calendar').fullCalendar('getDate');
  const title = room_str + "(" + admin_str + ")";
  $.post('/requests/all',
      {
        'admin_id': admin_id,
        'room_id': room_id,
        'year': m.format('YYYY'),
        'month': m.format('MM')
      },
      function(response) {
        for (var i = 0; i < response.length; i++) {
          const r = response[i];
          $('#calendar').fullCalendar('removeEvents', r.id);
          $('#calendar').fullCalendar('renderEvent',
              {
                id: r.id,
                title: title,
                start: r.date,
                allDay: true
              })
        }
      }
  );
});

$('#all-off').click(function() {
  const room_id = $('#_room').val();
  const admin_id = $('#_admin').val();
  const m = $('#calendar').fullCalendar('getDate');
  $.post('/requests/all_dell',
      {
        'admin_id': admin_id,
        'room_id': room_id,
        'year': m.format('YYYY'),
        'month': m.format('MM')
      },
      function(response) {
        for (var i = 0; i < response.length; i++) {
          $('#calendar').fullCalendar('removeEvents', response[i].id);
        }
      }
  );
});
<% end %>
